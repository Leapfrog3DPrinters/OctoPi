#!/bin/bash
# With a lot of thanks to https://github.com/RPi-Distro/raspi-config
set -x

progressimg="/usr/share/expand-homefs/lpfrg-expandhomefs-portrait.png"

get_init_sys() {
  if command -v systemctl > /dev/null && systemctl | grep -q '\-\.mount'; then
    SYSTEMD=1
  elif [ -f /etc/init.d/cron ] && [ ! -h /etc/init.d/cron ]; then
    SYSTEMD=0
  else
    echo "Unrecognised init system"
    return 1
  fi
}

do_expand_homefs() {
  get_init_sys
  if [ $SYSTEMD -eq 1 ]; then
    #HOME_PART=$(mount | sed -n 's|^/dev/\(.*\) on /home .*|\1|p')
    HOME_PART=$(cat /etc/fstab | grep "/home" | awk '{print $1}' | sed -n 's|^/dev/\(.*\)|\1|p')
  else
    if ! [ -h /dev/home ]; then
      whiptail --msgbox "/dev/home does not exist or is not a symlink. Don't know how to expand" 20 60 2
      return 0
    fi
    HOME_PART=$(readlink /dev/home)
  fi

  PART_NUM=${HOME_PART#mmcblk0p}
  if [ "$PART_NUM" = "$HOME_PART" ]; then
    whiptail --msgbox "$HOME_PART is not an SD card. Don't know how to expand" 20 60 2
    return 0
  fi

  LAST_PART_NUM=$(parted /dev/mmcblk0 -ms unit s p | tail -n 1 | cut -f 1 -d:)
  if [ $LAST_PART_NUM -ne $PART_NUM ]; then
    whiptail --msgbox "$HOME_PART is not the last partition. Don't know how to expand" 20 60 2
    return 0
  fi

  # Get the starting offset of the home partition
  PART_START=$(parted /dev/mmcblk0 -ms unit s p | grep "^${PART_NUM}" | cut -f 2 -d: | sed 's/[^0-9]//g')
  [ "$PART_START" ] || return 1
  # Return value will likely be error for fdisk as it fails to reload the
  # partition table because the home fs is mounted
  if [ "$PART_NUM" -lt 5 ]; then
    fdisk /dev/mmcblk0 <<EOF
p
d
$PART_NUM
n
p
$PART_NUM
$PART_START

p
w
EOF
  else
    if [ $(mount | grep -q "on /home") ]; then
        whiptail --msgbox "$HOME_PART is mounted. Please unmount before resizing." 20 60 2
        return 0
    fi

    # Dealing with extended and logical partitions here
    # First find size of SD cad
    lastsector=$(blockdev --getsz /dev/mmcblk0)
    expandto=$(($lastsector - 1))

    # Now find the partition number of the extended partition
    EXTENDED_PART=$(fdisk /dev/mmcblk0 -l | grep "Extended" | awk '{print $1}')
    EXTENDED_PART_NUM=${EXTENDED_PART#/dev/mmcblk0p}
    parted /dev/mmcblk0 -s p
    parted /dev/mmcblk0 -ms resizepart "$EXTENDED_PART_NUM" "${expandto}s" 
    parted /dev/mmcblk0 -ms resizepart "$PART_NUM" "${expandto}s" 
    parted /dev/mmcblk0 -s p

#     parted /dev/mmcblk0 <<EOF
# p
# resizepart
# $EXTENDED_PART_NUM
# y
# ${expandto}s
# resizepart
# $PART_NUM
# ${expandto}s
# q
# EOF
  fi

   # Fix fstab to automount home
    sed -i "s|^\(/dev/$HOME_PART .*\)\(noauto\)\(.*\)|\1auto\3|" /etc/fstab

  ASK_TO_REBOOT=1

  # now set up an init.d script
cat <<EOF > /etc/init.d/homeresize2fs_once &&
#!/bin/sh
### BEGIN INIT INFO
# Provides:          homeresize2fs_once
# Required-Start:
# Required-Stop:
# Default-Start: 3
# Default-Stop:
# Short-Description: Resize the home filesystem to fill partition
# Description:
### END INIT INFO

. /lib/lsb/init-functions

case "\$1" in
  start)
    log_daemon_msg "Starting homeresize2fs_once" &&
    resize2fs /dev/$HOME_PART &&
    update-rc.d homeresize2fs_once remove &&
    rm /etc/init.d/homeresize2fs_once &&
    log_end_msg \$?
    ;;
  *)
    echo "Usage: \$0 start" >&2
    exit 3
    ;;
esac
EOF
  chmod +x /etc/init.d/homeresize2fs_once &&
  update-rc.d homeresize2fs_once defaults
}



# Display a screen overlay to notify user we're expanding 
fbi -noverbose --autodown -d /dev/fb0 -once -T 7 "$progressimg"&

echo 'Expanding home partition...'
do_expand_homefs
echo 'Done. Restart!'