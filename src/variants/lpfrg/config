VARIANT_CONFIG_DIR=$(realpath -s $(dirname $(realpath -s $BASH_SOURCE)))

OCTOPI_OVERRIDE_HOSTNAME=lpfrgPi
OCTOPI_INCLUDE_OCTOPIPANEL=no
OCTOPI_INCLUDE_WIRINGPI=no
OCTOPI_INCLUDE_CURAENGINE=no
OCTOPI_IMAGE_ENLARGEROOT=900 #TODO: Find smaller values that will do the job
OCTOPI_IMAGE_HOMEPARTITION=400 #TODO: Find smaller values that will do the job
# Skip resize root for now (may give issues with home partition)
OCTOPI_IMAGE_RESIZEROOT=
OCTOPI_ENABLE_BOOT_NETWORKSETTINGS=no

# To set the pi password, make a file LPFRGPASSWD in the variants/lpfrg folder (to hide it from git)

if [ -f "$VARIANT_CONFIG_DIR/LPFRGPASSWD" ]; then
	OCTOPI_PI_PASSWORD=$(<"$VARIANT_CONFIG_DIR/LPFRGPASSWD")
else
	OCTOPI_PI_PASSWORD=
fi

# Custom config
OCTOPI_INCLUDE_OCTOPRINT_LUI=yes
OCTOPI_OCTOPRINT_LUI_REPO_SHIP=https://github.com/Leapfrog3DPrinters/OctoPrint-LUI.git
OCTOPI_OCTOPRINT_LUI_REPO_BUILD=
OCTOPI_OCTOPRINT_LUI_REPO_BRANCH=devel

OCTOPI_OCTOPRINT_REPO_SHIP=https://github.com/Leapfrog3DPrinters/OctoPrint.git

OCTOPI_INCLUDE_OCTOPRINT_FLASHARDUINO=yes
OCTOPI_OCTOPRINT_FLASHARDUINO_REPO_SHIP=https://github.com/Leapfrog3DPrinters/OctoPrint-flashArduino.git
OCTOPI_OCTOPRINT_FLASHARDUINO_REPO_BUILD=
OCTOPI_OCTOPRINT_FLASHARDUINO_REPO_BRANCH=lui-branch

OCTOPI_INCLUDE_OCTOPRINT_GCODERENDER=yes
OCTOPI_OCTOPRINT_GCODERENDER_REPO_SHIP=https://github.com/Leapfrog3DPrinters/OctoPrint-gcodeRender.git
OCTOPI_OCTOPRINT_GCODERENDER_REPO_BUILD=
OCTOPI_OCTOPRINT_GCODERENDER_REPO_BRANCH=master

OCTOPI_INCLUDE_OCTOPRINT_NETWORKMANAGER=yes
OCTOPI_OCTOPRINT_NETWORKMANAGER_REPO_SHIP=https://github.com/Leapfrog3DPrinters/OctoPrint-NetworkManager.git
OCTOPI_OCTOPRINT_NETWORKMANAGER_REPO_BUILD=
OCTOPI_OCTOPRINT_NETWORKMANAGER_REPO_BRANCH=master
